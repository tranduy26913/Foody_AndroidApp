<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    android:paddingTop="12dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/imgShopSearch"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgShopSearch"
        >
        <TextView
            android:id="@+id/tvNameShopSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Dạ khúc Cafe"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/txt_color"
            android:lines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tvAddressShopSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvNameShopSearch"
            app:layout_constraintStart_toStartOf="parent"
            android:text="32/100 Đường 59, P.14, QUận Gò Vấp, TP.HCM"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvAddressShopSearch"
app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:id="@+id/tvTypeStoreShopSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Café/Dessert"
                android:layout_marginEnd="50dp"
                android:textColor="#555"
                android:textSize="12sp"
                android:lines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/tvRateShopSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="7.2"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1CB141"
                android:lines="1"
                android:ellipsize="end"

                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/imgShopSearch"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:background="#bbb"
    />
</androidx.constraintlayout.widget.ConstraintLayout>